<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
        }

        .form-container form {
            display: flex;
            flex-direction: column;
        }

        .form-container input[type="text"],
        .form-container input[type="email"] {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-container a {
            text-decoration: none;
            color: #007BFF;
            background-color: #f4f4f9;
            border: 1px solid #007BFF;
            padding: 10px 15px;
            border-radius: 4px;
            text-align: center;
            transition: background-color 0.3s, color 0.3s;
        }

        .form-container a:hover {
            background-color: #007BFF;
            color: #fff;
        }
    </style>
</head>
<body>
    <% data.forEach(item => { %>
        <div class="form-container">
            <form action="/register" method="post">
                <input type="text" name="name" value="<%= item.name %>" placeholder="Name">
                <input type="email" name="email" value="<%= item.email %>" placeholder="Email">
                <input type="text" name="description" value="<%= item.description %>" placeholder="Description">
                <input type="text" name="address" value="<%= item.address %>" placeholder="Address">
                <input type="file" name="image">
                <a href="/update/<%= item._id %>">Update</a>
            </form>
        </div>
    <% }); %>
</body>
</html>
